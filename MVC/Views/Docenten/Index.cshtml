    Layout = "~/Views/Shared/_IntranetLayout.cshtml";
}

<h2>Docenten</h2>

<p>
    @Html.ActionLink("Maak nieuwe docent aan", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.voornaam)*@
            Voornaam
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.achternaam)*@
            Achternaam
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.email)*@
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.voornaam)
        </td>
