@model HHS_MVC.Models.tblKlasgroep

@{
    ViewBag.Title = "Bewerk klasgroep";
    Layout = "~/Views/Shared/_IntranetLayout.cshtml";
}

<h2>Bewerken</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Klasgroepen</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.klasgroep_id)

        <div class="form-group">
            @Html.LabelFor(model => model.naam, "Klasnaam", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.naam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.klascode,"Klascode",  htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.klascode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.klascode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.richting_id, "Richting", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("richting_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.richting_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.docent_id, "Titularis", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("docent_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.docent_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opslaan" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
